{
    "name": "aternos/modrinth-api",
    "type": "library",
    "description": "PHP Client for the Modrinth API. This client is based on the openapi spec.",
    "keywords": [
        "modrinth",
        "mods",
        "plugins",
        "minecraft",
        "php",
        "api"
    ],
    "homepage": "https://github.com/aternosorg/php-modrinth-api",
    "license": "MIT",
    "authors": [
        {
            "name": "Aternos GmbH",
            "homepage": "https://aternos.gmbh"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^7.3",
        "guzzlehttp/psr7": "^1.7 || ^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0 || ^9.0",
        "friendsofphp/php-cs-fixer": "^3.5"
    },
    "autoload": {
        "psr-4": { "Aternos\\ModrinthApi\\" : "lib/" }
    },
    "autoload-dev": {
        "psr-4": { "Aternos\\ModrinthApi\\Test\\" : "test/" }
    }
}
